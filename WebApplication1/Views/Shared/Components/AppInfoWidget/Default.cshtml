@model YourProject.ViewComponents.AppInfoViewModel
@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WebApplication1.SharedResource> Localizer

<div class="card shadow-sm p-3 mb-3 position-relative" id="appInfoWidget">

    <h5>@Localizer["AppInfo"]</h5>
    <ul>
        <li>@Localizer["AppVersion"]: <strong>@Model.AppVersion</strong></li>
        <li>@Localizer["LastDeployment"]: <strong>@Model.DeploymentDate.ToLocalTime()</strong></li>
        <li>@Localizer["MemoryUsage"]: <strong>@Model.MemoryUsage</strong></li>
        <li>@Localizer["CPUUsage"]: <strong>@Model.CpuUsage</strong></li>
        <li>@Localizer["ProcessCount"]: <strong>@Model.ProcessCount</strong></li>
    </ul>

    <div class="mt-3 border-top pt-2">
        <strong>@Localizer["APIStat"]:</strong>
        @if (Model.ApiStatuses.Any())
        {
            <ul>
                @foreach (var status in Model.ApiStatuses)
                {
                    <li>@status</li>
                }
            </ul>
        }
        else
        {
            <p><em>@Localizer["WIP"]</em></p>
        }
    </div>

    <a href="@Model.LogsUrl" target="_blank" class="btn btn-link">@Localizer["ViewLogs"]</a>
</div>
