@model WebApplication1.Models.ForecastWeatherViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WebApplication1.SharedResource> Localizer

<div class="card shadow-sm" id="forecastWidget">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">@Localizer["Předpověď počasí"] - @Model.LocationName</h4>
    </div>

    <div class="card-body">
        <form id="forecastLocationForm"
              class="mb-3 position-relative"
              autocomplete="off"
              style="overflow: visible;"
              data-api="@Url.Content("~/api/locations")">

            <!-- honeypot prohlížeče (odvede autofill mimo náš input) -->
            <input type="text" autocomplete="username" tabindex="-1" aria-hidden="true"
                   style="position:absolute; left:-9999px; top:-9999px; height:0; width:0; opacity:0;">
            <input type="password" autocomplete="new-password" tabindex="-1" aria-hidden="true"
                   style="position:absolute; left:-9999px; top:-9999px; height:0; width:0; opacity:0;">
            <div class="input-group">
                <!-- PONECHÁVÁME name="location" kvůli tvému původnímu submitu -->
                <input type="text"
                       id="forecastLocationInput"
                       name="location"
                       class="form-control"
                       placeholder="Zadejte město..."
                       data-role="location-input"
                       autocomplete="off"
                       autocapitalize="off"
                       autocorrect="off"
                       spellcheck="false" />
                <button type="submit" class="btn btn-primary">Načíst</button>
            </div>
            <!-- Dropdown pro našeptávání -->
            <ul class="list-group position-absolute w-100 bg-white border rounded location-suggestions"
                style="z-index:2000; max-height: 250px; overflow-y: auto; display:none;"></ul>
        </form>

        <!-- Denní přehled -->
        <div class="d-flex flex-wrap justify-content-around mb-4">
            @foreach (var day in Model.ForecastDays)
            {
                <div class="card text-center m-2 p-3" style="width: 10rem;">
                    <div><strong>@day.Date</strong></div>
                    <img src="@day.ConditionIcon" alt="@day.ConditionText" width="64" height="64" />
                    <div>@day.ConditionText</div>
                    <div><strong>@day.MaxTempC°C / @day.MinTempC°C</strong></div>
                    <div>💧 @day.ChanceOfRain% @Localizer["déšť"]</div>
                </div>
            }
        </div>

        <!-- Hodinové grafy -->
        <h5>@Localizer["Hodinová teplota (po 2 hodinách)"]</h5>
        @foreach (var day in Model.ForecastDays)
        {
            <div class="mt-3">
                <h6 class="fw-bold">@day.Date</h6>
                <canvas class="temperatureChart"
                        style="width:100%; height:250px; max-height:250px; box-sizing:border-box;"
                        data-labels='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(day.Hourly.Where((h, index) => index % 2 == 0).Select(h => h.Hour)))'
                        data-values='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(day.Hourly.Where((h, index) => index % 2 == 0).Select(h => h.TempC)))'>
                </canvas>
            </div>
        }
    </div>
</div>

<!-- Chart.js knihovna -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Map pro uchování Chart.js instancí
    const chartInstances = new Map();

    function renderTemperatureCharts() {
        document.querySelectorAll('.temperatureChart').forEach(canvas => {
            // znič starý graf, pokud existuje
            if (chartInstances.has(canvas)) {
                chartInstances.get(canvas).destroy();
            }

            const ctx = canvas.getContext('2d');
            const labels = JSON.parse(canvas.dataset.labels);
            const values = JSON.parse(canvas.dataset.values);

            const chart = new Chart(ctx, {
                type: 'line',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Teplota (°C)',
                        data: values,
                        borderColor: 'rgba(75,192,192,1)',
                        backgroundColor: 'rgba(75,192,192,0.2)',
                        fill: true,
                        tension: 0.4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: { title: { display: true, text: 'Čas' } },
                        y: { title: { display: true, text: 'Teplota (°C)' } }
                    }
                }
            });

            chartInstances.set(canvas, chart);
        });
    }

    // Inicialní vykreslení grafů při načtení komponenty
    renderTemperatureCharts();

    // AJAX načtení nové lokace
    const form = document.getElementById('forecastLocationForm');
    form.addEventListener('submit', async e => {
        e.preventDefault();
        const location = form.querySelector('input[name="location"]').value;
        const response = await fetch(`/ForecastWeather?location=${encodeURIComponent(location)}`);
        const html = await response.text();

        // Vlož nový obsah do stávajícího wrapperu (nezměníme ID)
        const wrapper = document.getElementById('forecastWidget');
        wrapper.innerHTML = html;

        // Vykresli grafy znovu po AJAX update
        renderTemperatureCharts();
    });
</script>