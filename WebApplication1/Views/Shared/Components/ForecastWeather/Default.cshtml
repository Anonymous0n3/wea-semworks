@model WebApplication1.Models.ForecastWeatherViewModel

<div class="card shadow-sm" id="forecastWidget">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Předpověď počasí - @Model.LocationName</h4>
    </div>

    <div class="card-body">
        <form id="forecastLocationForm"
              class="mb-3 position-relative"
              autocomplete="off"
              style="overflow: visible;"
              data-api="@Url.Content("~/api/locations")">

            <!-- honeypot prohlížeče (odvede autofill mimo náš input) -->
            <input type="text" autocomplete="username" tabindex="-1" aria-hidden="true"
                   style="position:absolute; left:-9999px; top:-9999px; height:0; width:0; opacity:0;">
            <input type="password" autocomplete="new-password" tabindex="-1" aria-hidden="true"
                   style="position:absolute; left:-9999px; top:-9999px; height:0; width:0; opacity:0;">

            <div class="input-group">
                <!-- PONECHÁVÁME name="location" kvůli tvému původnímu submitu -->
                <input type="text"
                       id="forecastLocationInput"
                       name="location"
                       class="form-control"
                       placeholder="Zadejte město..."
                       data-role="location-input"
                       autocomplete="off"
                       autocapitalize="off"
                       autocorrect="off"
                       spellcheck="false" />
                <button type="submit" class="btn btn-primary">Načíst</button>
            </div>

            <!-- Dropdown pro našeptávání -->
            <ul class="list-group position-absolute w-100 bg-white border rounded location-suggestions"
                style="z-index:2000; max-height: 250px; overflow-y: auto; display:none;"></ul>
        </form>

        <!-- Denní přehled -->
        <div class="d-flex flex-wrap justify-content-around mb-4">
            @foreach (var day in Model.ForecastDays)
            {
                <div class="card text-center m-2 p-3" style="width: 10rem;">
                    <div><strong>@day.Date</strong></div>
                    <img src="@day.ConditionIcon" alt="@day.ConditionText" width="64" height="64" />
                    <div>@day.ConditionText</div>
                    <div><strong>@day.MaxTempC°C / @day.MinTempC°C</strong></div>
                    <div><strong>@((day.MaxTempC * 9 / 5) + 32)°F / @((day.MinTempC * 9 / 5) + 32)°F</strong></div>
                    <div>💧 @day.ChanceOfRain% déšť</div>
                    <div>🌞 UV: @day.Uv</div>
                </div>
            }
        </div>

        <!-- Hodinové přehledy (po 2 hodinách) -->
        <h5>Hodinová teplota (po 2 hodinách)</h5>
        @foreach (var day in Model.ForecastDays)
        {
            <div class="mt-3">
                <h6 class="fw-bold">@day.Date</h6>
                <div class="d-flex flex-wrap">
                    @for (int i = 0; i < day.Hourly.Count; i += 2)
                    {
                        var hour = day.Hourly[i];
                        <div class="card text-center m-2 p-2" style="width: 8rem;">
                            <div><strong>@hour.Hour</strong></div>
                            <div>@hour.TempC°C / @hour.TempF°F</div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // AJAX načtení nové lokace (původní chování)
            const form = document.getElementById('forecastLocationForm');
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const location = form.querySelector('input[name="location"]').value;
                const response = await fetch(`/ForecastWeather?location=${encodeURIComponent(location)}`);
                const html = await response.text();
                document.getElementById('forecastWidget').outerHTML = html;
            });
        });
    </script>
}
