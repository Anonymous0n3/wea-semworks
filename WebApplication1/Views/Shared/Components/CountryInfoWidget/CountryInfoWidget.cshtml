@model WebApplication1.Models.CountryInfoModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WebApplication1.SharedResource> Localizer

<div id="countryWidget_@Guid.NewGuid()" class="country-info-widget border rounded p-3 shadow-sm">
    <h3 class="mb-3">🌍 @Localizer["Country Info"]</h3>

    <!-- Input pro vyhledávání -->
    <div class="input-group mb-3">
        <input type="text" class="form-control input-country" placeholder="Search country..." />
        <button class="btn btn-primary btn-search">Search</button>
    </div>

    <!-- Detail vybrané země -->
    <div class="country-result mt-4 text-start">
        @if (Model != null)
        {
            <h4>@Model.Name (@Model.IsoCode)</h4>
            <img src="@Model.FlagUrl" alt="Flag of @Model.Name" class="mb-2" style="height:30px;">
            <p><strong>@Localizer["Capital"]:</strong> @Model.CapitalCity</p>
            <p><strong>@Localizer["Currency"]:</strong> @Model.Currency</p>
            <p><strong>@Localizer["Phone code"]:</strong> @Model.PhoneCode</p>
        }
        else
        {
            <p class="text-muted">@Localizer["Select a country to see details"].</p>
        }
    </div>
</div>
