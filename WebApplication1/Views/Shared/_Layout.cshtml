<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>

                    <!-- 🔽 Dropdown s widgety -->
                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="widgetMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            Widgety
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="widgetMenu">
                            <li><a class="dropdown-item widget-link" data-widget="AppInfoWidget" href="#">App Info</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="HelloWidget" href="#">Hello CouchDB</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="StatsWidget" href="#">Statistiky</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div id="widgetContainer" class="mt-4">
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="~/js/site.js"></script>
</body>
<script>
        document.addEventListener('DOMContentLoaded', function () {
        const widgetLinks = document.querySelectorAll('.widget-link');
        const container = document.getElementById('widgetContainer');

        // 🔹 Načti uložené widgety z localStorage po reloadu
        const savedWidgets = JSON.parse(localStorage.getItem('activeWidgets') || '[]');
        savedWidgets.forEach(loadWidget);

        // 🔹 Kliknutí na položku v menu
        widgetLinks.forEach(link => {
            link.addEventListener('click', async (e) => {
                e.preventDefault();
                const widgetName = link.getAttribute('data-widget');
                loadWidget(widgetName);
            });
        });

        // 🔹 Funkce pro načtení widgetu
        async function loadWidget(widgetName) {
            // Pokud už widget existuje, nepřidávej znovu
            if (container.querySelector(`[data-widget-name="${widgetName}"]`)) return;

            try {
                const response = await fetch(`/Widget/Load?name=${widgetName}`);
                const html = await response.text();

                const widgetWrapper = document.createElement('div');
                widgetWrapper.classList.add('widget-wrapper', 'mb-3');
                widgetWrapper.setAttribute('data-widget-name', widgetName);
                widgetWrapper.innerHTML = html;

                // Tlačítko pro zavření
                const closeBtn = document.createElement('button');
                closeBtn.textContent = '×';
                closeBtn.classList.add('btn', 'btn-sm', 'btn-danger', 'float-end');
                closeBtn.addEventListener('click', () => {
                    widgetWrapper.remove();
                    removeWidgetFromStorage(widgetName);
                });
                widgetWrapper.prepend(closeBtn);

                container.appendChild(widgetWrapper);

                addWidgetToStorage(widgetName);
            } catch (err) {
                const errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-danger';
                errorDiv.textContent = 'Nepodařilo se načíst widget.';
                container.appendChild(errorDiv);
            }
        }

        // 🔹 Uložení widgetů
        function addWidgetToStorage(widgetName) {
            const current = JSON.parse(localStorage.getItem('activeWidgets') || '[]');
            if (!current.includes(widgetName)) {
                current.push(widgetName);
                localStorage.setItem('activeWidgets', JSON.stringify(current));
            }
        }

        // 🔹 Odebrání widgetu ze storage
        function removeWidgetFromStorage(widgetName) {
            let current = JSON.parse(localStorage.getItem('activeWidgets') || '[]');
            current = current.filter(w => w !== widgetName);
            localStorage.setItem('activeWidgets', JSON.stringify(current));
        }
    });


    function removeAppInfoWidget() {
        const widget = document.getElementById('appInfoWidget');
        if (widget) {
            widget.style.transition = "opacity 0.3s ease";
            widget.style.opacity = "0";
            setTimeout(() => widget.remove(), 300);
        }
    }


    document.addEventListener('DOMContentLoaded', function () {
        const langSelect = document.getElementById('langSelect');

        // Zjisti aktuální jazyk z cookie
        const cultureCookie = document.cookie.split('; ').find(row => row.startsWith('.AspNetCore.Culture='));
        if (cultureCookie) {
            const langMatch = cultureCookie.match(/c=([^|]+)/);
            if (langMatch) langSelect.value = langMatch[1];
        }

        // Změna jazyka => nastav cookie a reload
        langSelect.addEventListener('change', () => {
            const lang = langSelect.value;
            document.cookie = `.AspNetCore.Culture=c=${lang}|uic=${lang}; path=/`;
            location.reload();
        });
    });
</script>
</html>
