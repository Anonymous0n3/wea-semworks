@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WebApplication1.SharedResource> Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                        </li>
                    </ul>

                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="widgetMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            Widgety
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="widgetMenu">
                            <li><a class="dropdown-item widget-link" data-widget="AppInfoWidget" href="#">App Info</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="CurrentWeather" href="#">Current Weather</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="ForecastWeather" href="#">Forecast Weather</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="CurrencyWidget" href="#">Currency Widget</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div id="widgetContainer" class="mt-4"></div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/weather-autocomplete.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.getElementById('widgetContainer');
            const activeWidgets = new Map();
            const chartMap = new Map(); // map pro instance grafů

            // Načtení widgetů z localStorage
            const savedWidgets = JSON.parse(localStorage.getItem('openWidgets') || '[]');
            savedWidgets.forEach(w => loadWidget(w.name, w.location));

            function saveWidgetState() {
                const data = Array.from(activeWidgets.entries()).map(([name, wrapper]) => ({
                    name,
                    location: wrapper.dataset.location || ''
                }));
                localStorage.setItem('openWidgets', JSON.stringify(data));
            }

            // Inicializace CurrencyWidget grafu
            function initCurrencyWidget(wrapper) {
                const canvas = wrapper.querySelector("#rateChart");
                if (!canvas) return;

                const labels = JSON.parse(canvas.dataset.labels || '[]');
                const data = JSON.parse(canvas.dataset.rates || '[]');
                const label = canvas.dataset.label || '';

                if (!labels.length || !data.length) return;

                const ctx = canvas.getContext("2d");
                new Chart(ctx, {
                    type: 'line',
                    data: { labels, datasets: [{ label, data, fill: false, borderColor: 'rgba(54,162,235,1)', backgroundColor: 'rgba(54,162,235,0.2)', tension: 0.3, borderWidth: 2, pointRadius: 4, pointHoverRadius: 6, pointBackgroundColor: 'rgba(54,162,235,1)' }] },
                    options: { responsive: true, plugins: { legend: { display: true, position: 'bottom' } } }
                });
            }

            // Funkce pro vykreslení ForecastWeather grafů
            function renderForecastCharts(wrapper) {
                const charts = wrapper.querySelectorAll('.temperatureChart');
                charts.forEach(canvas => {
                    if (chartMap.has(canvas)) chartMap.get(canvas).destroy();

                    const ctx = canvas.getContext('2d');
                    if (!ctx) return;

                    const labels = JSON.parse(canvas.dataset.labels);
                    const values = JSON.parse(canvas.dataset.values);

                    const chart = new Chart(ctx, {
                        type: 'line',
                        data: { labels, datasets: [{ label: 'Teplota (°C)', data: values, borderColor: 'rgba(75,192,192,1)', backgroundColor: 'rgba(75,192,192,0.2)', fill: true, tension: 0.4 }] },
                        options: { responsive: true, maintainAspectRatio: false, scales: { x: { title: { display: true, text: 'Čas' } }, y: { title: { display: true, text: 'Teplota (°C)' } } } }
                    });

                    chartMap.set(canvas, chart);
                });
            }

            // Načtení widgetu
            async function loadWidget(widgetName, location = '') {
                try {
                    let url = `/Widget/Load?name=${widgetName}`;
                    if (widgetName === "CurrencyWidget") {
                        const base = localStorage.getItem("baseCurrency") || "EUR";
                        const quote = localStorage.getItem("quoteCurrency") || "USD";
                        url += `&baseCurrency=${encodeURIComponent(base)}&quoteCurrency=${encodeURIComponent(quote)}`;
                    }
                    if (location) url += `&location=${encodeURIComponent(location)}`;

                    const response = await fetch(url);
                    const html = await response.text();

                    let wrapper = activeWidgets.get(widgetName);
                    const isNew = !wrapper;

                    if (!wrapper) {
                        wrapper = document.createElement('div');
                        wrapper.classList.add('widget-wrapper', 'mb-3', 'position-relative', 'p-2', 'border', 'rounded');
                        wrapper.dataset.widgetName = widgetName;
                        container.appendChild(wrapper);
                        activeWidgets.set(widgetName, wrapper);
                    }

                    wrapper.dataset.location = location;
                    wrapper.innerHTML = html;
                    addCloseButton(wrapper, widgetName);
                    attachInteractions(wrapper, widgetName);

                    if (widgetName === "ForecastWeather") renderForecastCharts(wrapper);
                    if (widgetName === "CurrencyWidget") initCurrencyWidget(wrapper);

                    if (isNew) {
                        wrapper.style.opacity = "0";
                        wrapper.style.transition = "opacity 0.3s ease";
                        requestAnimationFrame(() => (wrapper.style.opacity = "1"));
                    }

                    saveWidgetState();
                } catch (error) {
                    console.error("Chyba při načítání widgetu:", error);
                }
            }

            function attachInteractions(wrapper, widgetName) {
                const toggleBtn = wrapper.querySelector('#toggleUnit');
                toggleBtn?.addEventListener('click', () => {
                    const tempEl = wrapper.querySelector('h2');
                    if (!tempEl) return;
                    if (tempEl.textContent.includes('°C')) tempEl.textContent = tempEl.dataset.fahrenheit + '°F';
                    else tempEl.textContent = tempEl.dataset.celsius + '°C';
                });

                const form = wrapper.querySelector('#locationForm');
                form?.addEventListener('submit', async e => {
                    e.preventDefault();
                    const input = form.querySelector('input[name="location"]');
                    await loadWidget(widgetName, input.value);
                });

                const forecastForm = wrapper.querySelector('#forecastLocationForm');
                forecastForm?.addEventListener('submit', async e => {
                    e.preventDefault();
                    const input = forecastForm.querySelector('input[name="location"]');
                    await loadWidget(widgetName, input.value);
                });

                // CurrencyWidget formulář
                if (widgetName === "CurrencyWidget") {
                    const currencyForm = wrapper.querySelector('#currencyForm');
                    const baseSelect = wrapper.querySelector('#baseCurrency');
                    const quoteSelect = wrapper.querySelector('#quoteCurrency');

                    const savedBase = localStorage.getItem("baseCurrency");
                    const savedQuote = localStorage.getItem("quoteCurrency");

                    if (savedBase && baseSelect?.querySelector(`option[value="${savedBase}"]`)) baseSelect.value = savedBase;
                    if (savedQuote && quoteSelect?.querySelector(`option[value="${savedQuote}"]`)) quoteSelect.value = savedQuote;

                    currencyForm?.addEventListener("submit", async e => {
                        e.preventDefault();
                        localStorage.setItem("baseCurrency", baseSelect.value);
                        localStorage.setItem("quoteCurrency", quoteSelect.value);
                        await loadWidget(widgetName);
                    });
                }
            }

            function addCloseButton(wrapper, widgetName) {
                if (wrapper.querySelector('.close-widget-btn')) return;

                const closeBtn = document.createElement('button');
                closeBtn.textContent = '×';
                closeBtn.classList.add('btn', 'btn-sm', 'btn-danger', 'close-widget-btn');
                closeBtn.style.position = "absolute";
                closeBtn.style.top = "5px";
                closeBtn.style.right = "5px";

                closeBtn.addEventListener('click', () => {
                    wrapper.style.transition = "opacity 0.3s ease";
                    wrapper.style.opacity = "0";
                    setTimeout(() => {
                        wrapper.remove();
                        activeWidgets.delete(widgetName);
                        saveWidgetState();
                    }, 300);
                });

                wrapper.appendChild(closeBtn);
            }

            document.querySelectorAll('.widget-link').forEach(link => {
                link.addEventListener('click', e => {
                    e.preventDefault();
                    const widgetName = link.getAttribute('data-widget');
                    loadWidget(widgetName);
                });
            });
        });
    </script>
</body>
</html>
