@using System.Globalization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<WebApplication1.SharedResource> Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">@Localizer["Privacy"]</a>
                        </li>
                    </ul>

                    <div class="dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" type="button" id="widgetMenu" data-bs-toggle="dropdown" aria-expanded="false">
                            Widgety
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="widgetMenu">
                            <li><a class="dropdown-item widget-link" data-widget="AppInfoWidget" href="#">App Info</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="CurrentWeather" href="#">Current Weather</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="ForecastWeather" href="#">Forecast Weather</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="CurrencyWidget" href="#">Currency Widget</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="CountryInfoWidget" href="#">Country Widget</a></li>
                            <li><a class="dropdown-item widget-link" data-widget="NewsWidget" href="#">News Widget</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div id="widgetContainer" class="mt-4"></div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/weather-autocomplete.js" defer></script>
    <script src="~/js/country-widget.js"></script>
    <script src="~/js/news.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function getWidgetKey(name, location) {
            return name + "::" + (location || "");
        }

        function normalizeWidgetName(name) {
            if (!name) return "";
            return name
                .split(/[^a-zA-Z0-9]/)
                .map(part => part.charAt(0).toUpperCase() + part.slice(1))
                .join('');
        }

        async function fetchWidgetsFromCouchDB() {
            const token = localStorage.getItem('jwtToken');
            if (!token) return [];

            try {
                const resp = await fetch("/api/auth/widgets", {
                    method: "GET",
                    headers: { "Authorization": "Bearer " + token }
                });
                if (!resp.ok) return [];

                const data = await resp.json();
                if (!Array.isArray(data)) return [];
                return data
                    .map(w => ({ name: normalizeWidgetName(w.name), location: w.location || "" }))
                    .filter(w => w.name);
            } catch (err) {
                console.error("❌ Chyba CouchDB:", err);
                return [];
            }
        }

        document.addEventListener('DOMContentLoaded', async function () {
            const container = document.getElementById('widgetContainer');
            const activeWidgets = new Map();
            const chartMap = new Map();
            const widgetLoadPromises = new Map();
            const token = localStorage.getItem("jwtToken");

            // ------------------------
            // 1️⃣ Načtení widgetů z localStorage
            // ------------------------
            const savedWidgets = JSON.parse(localStorage.getItem("openWidgets") || "[]");
            for (const w of savedWidgets) {
                const key = getWidgetKey(w.name, w.location);
                if (!activeWidgets.has(key)) await loadWidget(w.name, w.location);
            }

            // ------------------------
            // 2️⃣ Synchronizace s CouchDB
            // ------------------------
            if (token) {
                const couchData = await fetchWidgetsFromCouchDB();
                for (const w of couchData) {
                    const key = getWidgetKey(w.name, w.location);
                    if (!activeWidgets.has(key)) await loadWidget(w.name, w.location);
                }
                localStorage.setItem("openWidgets", JSON.stringify(couchData));
            }

            // ------------------------
            // Funkce pro ukládání widgetů
            // ------------------------
            async function saveWidgetState() {
                const widgets = Array.from(activeWidgets.entries()).map(([key]) => {
                    const [name, location] = key.split("::");
                    return { name, location };
                });
                localStorage.setItem("openWidgets", JSON.stringify(widgets));

                if (!token) return;
                try {
                    await fetch("/api/auth/widgets", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            "Authorization": "Bearer " + token
                        },
                        body: JSON.stringify(widgets)
                    });
                } catch (err) {
                    console.error("❌ Chyba ukládání na CouchDB:", err);
                }
            }

            // ------------------------
            // Funkce pro načtení widgetu
            // ------------------------
            async function loadWidget(widgetName, location = '') {
                const key = getWidgetKey(widgetName, location);

                if (widgetLoadPromises.has(key)) return widgetLoadPromises.get(key);

                let wrapper = activeWidgets.get(key);
                const isNew = !wrapper;

                if (!wrapper) {
                    wrapper = document.createElement('div');
                    wrapper.classList.add('widget-wrapper', 'mb-3', 'position-relative', 'p-2', 'border', 'rounded');
                    wrapper.dataset.widgetKey = key;
                    wrapper.dataset.location = location;
                    container.appendChild(wrapper);
                    activeWidgets.set(key, wrapper);
                }

                const promise = (async () => {
                    try {
                        if (isNew) {
                            let url = `/Widget/Load?name=${widgetName}`;
                            if (widgetName === "CurrencyWidget") {
                                const base = localStorage.getItem("baseCurrency") || "EUR";
                                const quote = localStorage.getItem("quoteCurrency") || "USD";
                                url += `&baseCurrency=${encodeURIComponent(base)}&quoteCurrency=${encodeURIComponent(quote)}`;
                            }
                            if (location) url += `&location=${encodeURIComponent(location)}`;

                            const resp = await fetch(url);
                            wrapper.innerHTML = await resp.text();
                        }

                        wrapper.dataset.location = location;

                        addCloseButton(wrapper, widgetName, key);
                        attachInteractions(wrapper, widgetName);

                        if (widgetName === "ForecastWeather") renderForecastCharts(wrapper);
                        if (widgetName === "CurrencyWidget") initCurrencyWidget(wrapper);
                        if (widgetName === "NewsWidget") initNewsWidget(wrapper);
                        if (widgetName === "CountryInfoWidget") {
                            if (!wrapper.id) wrapper.id = `countryWidget_${Date.now()}`;
                            initCountryWidget(wrapper.id);
                        }

                        if (isNew) {
                            wrapper.style.opacity = "0";
                            wrapper.style.transition = "opacity 0.3s ease";
                            requestAnimationFrame(() => wrapper.style.opacity = "1");
                        }

                        await saveWidgetState();
                    } catch (err) {
                        console.error("Chyba při načítání widgetu:", err);
                    } finally {
                        widgetLoadPromises.delete(key);
                    }
                })();

                widgetLoadPromises.set(key, promise);
                return promise;
            }

            // ------------------------
            // Grafy a widgety
            // ------------------------
            function renderForecastCharts(wrapper) {
                const charts = wrapper.querySelectorAll('.temperatureChart');
                charts.forEach(canvas => {
                    if (chartMap.has(canvas)) chartMap.get(canvas).destroy();
                    const ctx = canvas.getContext('2d');
                    if (!ctx) return;

                    const labels = JSON.parse(canvas.dataset.labels || '[]');
                    const values = JSON.parse(canvas.dataset.values || '[]');

                    const chart = new Chart(ctx, {
                        type: 'line',
                        data: { labels, datasets: [{ label: 'Teplota (°C)', data: values, borderColor: 'rgba(75,192,192,1)', backgroundColor: 'rgba(75,192,192,0.2)', fill: true, tension: 0.4 }] },
                        options: { responsive: true, maintainAspectRatio: false }
                    });
                    chartMap.set(canvas, chart);
                });
            }

            function initCurrencyWidget(wrapper) {
                const canvas = wrapper.querySelector("#rateChart");
                if (!canvas) return;
                const labels = JSON.parse(canvas.dataset.labels || '[]');
                const data = JSON.parse(canvas.dataset.rates || '[]');
                const label = canvas.dataset.label || '';
                if (!labels.length || !data.length) return;

                new Chart(canvas.getContext("2d"), {
                    type: 'line',
                    data: { labels, datasets: [{ label, data, fill: false, borderColor: 'rgba(54,162,235,1)', backgroundColor: 'rgba(54,162,235,0.2)', tension: 0.3 }] }
                });
            }

            function attachInteractions(wrapper, widgetName) {
                const toggleBtn = wrapper.querySelector('#toggleUnit');
                toggleBtn?.addEventListener('click', () => {
                    const tempEl = wrapper.querySelector('h2');
                    if (!tempEl) return;
                    tempEl.textContent = tempEl.textContent.includes('°C') ? tempEl.dataset.fahrenheit + '°F' : tempEl.dataset.celsius + '°C';
                });

                const form = wrapper.querySelector('#locationForm');
                form?.addEventListener('submit', async e => {
                    e.preventDefault();
                    await loadWidget(widgetName, form.querySelector('input[name="location"]').value);
                });

                const forecastForm = wrapper.querySelector('#forecastLocationForm');
                forecastForm?.addEventListener('submit', async e => {
                    e.preventDefault();
                    await loadWidget(widgetName, forecastForm.querySelector('input[name="location"]').value);
                });

                if (widgetName === "CurrencyWidget") {
                    const currencyForm = wrapper.querySelector('#currencyForm');
                    const base = wrapper.querySelector('#baseCurrency');
                    const quote = wrapper.querySelector('#quoteCurrency');

                    const savedBase = localStorage.getItem("baseCurrency");
                    const savedQuote = localStorage.getItem("quoteCurrency");
                    if (savedBase && base?.querySelector(`option[value="${savedBase}"]`)) base.value = savedBase;
                    if (savedQuote && quote?.querySelector(`option[value="${savedQuote}"]`)) quote.value = savedQuote;

                    currencyForm?.addEventListener("submit", async e => {
                        e.preventDefault();
                        localStorage.setItem("baseCurrency", base.value);
                        localStorage.setItem("quoteCurrency", quote.value);
                        await loadWidget(widgetName);
                    });
                }
            }

            function addCloseButton(wrapper, widgetName, key) {
                if (wrapper.querySelector('.close-widget-btn')) return;
                const closeBtn = document.createElement('button');
                closeBtn.textContent = '×';
                closeBtn.classList.add('btn','btn-sm','btn-danger','close-widget-btn');
                closeBtn.style.position = "absolute";
                closeBtn.style.top = "5px";
                closeBtn.style.right = "5px";
                closeBtn.addEventListener('click', () => {
                    wrapper.style.opacity = "0";
                    setTimeout(() => {
                        wrapper.remove();
                        activeWidgets.delete(key);
                        saveWidgetState();
                    }, 300);
                });
                wrapper.appendChild(closeBtn);
            }

            // ------------------------
            // Widget links
            // ------------------------
            document.querySelectorAll('.widget-link').forEach(link => {
                link.addEventListener('click', e => {
                    e.preventDefault();
                    const name = normalizeWidgetName(link.getAttribute('data-widget'));
                    const key = getWidgetKey(name, "");
                    if (!activeWidgets.has(key)) loadWidget(name);
                });
            });

            window.addEventListener('unload', saveWidgetState);
            document.addEventListener('visibilitychange', () => { if (document.visibilityState === 'hidden') saveWidgetState(); });

            // ------------------------
            // Login
            // ------------------------
            const loginForm = document.getElementById('loginForm');
            const loginError = document.getElementById('loginError');

            loginForm?.addEventListener('submit', async (e) => {
                e.preventDefault();
                const email = document.getElementById('loginEmail').value;
                const password = document.getElementById('loginPassword').value;

                try {
                    const resp = await fetch('/api/Auth/login', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ email, password })
                    });
                    const data = await resp.json();
                    if (!resp.ok) {
                        loginError.textContent = data.message || "Chyba přihlášení";
                        return;
                    }
                    loginError.textContent = "";
                    localStorage.setItem('jwtToken', data.token);
                    bootstrap.Modal.getInstance(document.getElementById('loginModal'))?.hide();

                    // Po přihlášení synchronizace s CouchDB
                    const couchData = await fetchWidgetsFromCouchDB();
                    for (const w of couchData) {
                        const key = getWidgetKey(w.name, w.location);
                        if (!activeWidgets.has(key)) await loadWidget(w.name, w.location);
                    }
                    localStorage.setItem("openWidgets", JSON.stringify(couchData));
                } catch {
                    loginError.textContent = "Nepodařilo se přihlásit.";
                }
            });

            // ------------------------
            // Countries
            // ------------------------
            window.allCountries = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(
                                                                await Context.RequestServices
                                                                                                .GetService<WebApplication1.Service.CountryInfoService>()
                                                                                                .GetAllCountriesAsync()
                                                ));
        });
    </script>
</body>
</html>
